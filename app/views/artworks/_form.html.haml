= simple_form_for(artwork) do |f|
  - if artwork.errors.any?
    #error_explanation
      %h2
        = pluralize(artwork.errors.count, "error")
        prohibited this artwork from being saved:
      %ul
        - artwork.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :style_id
    = f.text_field :style_id
  .field
    = f.label :image_id
    = f.text_field :image_id
  .field
    = f.label :model
    = f.text_field :model
  .field
    = f.label :size
    = f.number_field :size
  .field
    = f.label :smoothness
    = f.text_field :smoothness
  .field
    = f.label :num_iters
    = f.number_field :num_iters
  .actions
    = f.submit
